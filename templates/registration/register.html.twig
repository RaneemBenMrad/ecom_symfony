{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg p-4">
                    <h1 class="text-center text-primary mb-4">Create an Account</h1>

                    {# Flash messages display #}
                    {% for label, messages in app.flashes %}
                        <div class="alert alert-{{ label }} mt-3">
                            {% for message in messages %}
                                <p>{{ message }}</p>
                            {% endfor %}
                        </div>
                    {% endfor %}

                    {# Registration form #}
                    {{ form_start(registrationForm) }}
                    
                    <fieldset class="mb-4">
                        <legend class="text-uppercase text-muted">My Identity</legend>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.firstname, { 'label': 'First Name', 'attr': { 'class': 'form-control' } }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.lastname, { 'label': 'Last Name', 'attr': { 'class': 'form-control' } }) }}
                            </div>
                        </div>
                        {{ form_row(registrationForm.email, { 'label': 'E-mail', 'attr': { 'class': 'form-control' } }) }}
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="text-uppercase text-muted">My Contact Information</legend>
                        {{ form_row(registrationForm.address, { 'label': 'Address', 'attr': { 'class': 'form-control' } }) }}
                        {{ form_row(registrationForm.zipcode, { 'label': 'Postal Code', 'attr': { 'class': 'form-control' } }) }}
                        {{ form_row(registrationForm.city, { 'label': 'City', 'attr': { 'class': 'form-control' } }) }}
                    </fieldset>

                    <fieldset class="mb-4">
                        {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': { 'class': 'form-control' } }) }}
                    </fieldset>

                    <fieldset class="mb-4">
                        {{ form_row(registrationForm.RGPDConsent, { 'attr': { 'class': 'form-check-input' } }) }}
                    </fieldset>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3 shadow-sm">Sign Up</button>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100 mb-3 shadow-sm">Log In</a>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
