{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
<main class="container" style="background-color: black; color: white; min-height: 100vh; padding: 20px; display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <section class="text-center" style="width: 100%; max-width: 600px;">
        <div class="card shadow-lg p-5" style="background-color: #333; border: 2px solid #DDA0DD; border-radius: 8px;">
            <h1 class="text-center mb-4" style="color: #DDA0DD; font-size: 2rem;">Create an Account</h1>

            {# Flash messages display #}
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }} mt-3" style="background-color: #444; color: white; border: 1px solid #DDA0DD;">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            {# Registration form #}
            {{ form_start(registrationForm) }}
            
            <fieldset class="mb-4">
                <legend class="text-uppercase text-muted" style="color: #DDA0DD;">My Identity</legend>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(registrationForm.firstname, { 'label': 'First Name', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(registrationForm.lastname, { 'label': 'Last Name', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email, { 'label': 'E-mail', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
            </fieldset>

            <fieldset class="mb-4">
                <legend class="text-uppercase text-muted" style="color: #DDA0DD;">My Contact Information</legend>
                {{ form_row(registrationForm.address, { 'label': 'Address', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
                {{ form_row(registrationForm.zipcode, { 'label': 'Postal Code', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
                {{ form_row(registrationForm.city, { 'label': 'City', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
            </fieldset>

            <fieldset class="mb-4">
                {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': { 'class': 'form-control', 'style': 'background-color: #222; color: white; border: 1px solid #DDA0DD;' } }) }}
            </fieldset>

            <fieldset class="mb-4">
                {{ form_row(registrationForm.RGPDConsent, { 'attr': { 'class': 'form-check-input', 'style': 'background-color: #222; color: white;' } }) }}
            </fieldset>

            <div class="d-flex flex-column align-items-center">
                <button type="submit" class="btn btn-primary w-100 mb-3 shadow-sm" style="background-color: #DDA0DD; border-color: #DDA0DD; color: black; font-size: 1.2rem; padding: 10px;">
                    Sign Up
                </button>
                <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100 shadow-sm" style="background-color: #444; border-color: #DDA0DD; color: white; font-size: 1.2rem; padding: 10px;">
                    Log In
                </a>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </section>
</main>
{% endblock %}
