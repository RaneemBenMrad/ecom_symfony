<main class="container">
    <h1>Produits de la catégorie : {{ category.name }}</h1>
    <ul>
        {% for product in products %}
            <li>{{ product.name }}</li>
        {% else %}
            <li>Aucun produit trouvé pour cette catégorie.</li>
        {% endfor %}
    </ul>
    <a href="{{ path('categories_index') }}">Retour à la liste des catégories</a>
</main>
