{# templates/admin/categories/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin_categories_edit', {'id': category.id}) }}" class="btn btn-primary">Éditer</a>
                        <a href="{{ path('admin_categories_delete', {'id': category.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_categories_add') }}" class="btn btn-success">Ajouter une catégorie</a>
{% endblock %}
