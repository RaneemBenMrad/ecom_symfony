{# templates/admin/users/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<h1>Liste des Utilisateurs</h1>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.firstname }} {{ user.lastname }}</td>
            <td>{{ user.email }}</td>
            <td>
                <!-- Formulaire de suppression -->
                    <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</button>
                </form>

                <!-- Lien d'édition -->
                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">Éditer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('admin_users_add') }}">Ajouter un utilisateur</a>
{% endblock %}
