{# templates/admin/users/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center text-uppercase" style="color: #9b59b6;">Liste des Utilisateurs</h1>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('admin_users_add') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un utilisateur
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Éditer
                            </a>
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
