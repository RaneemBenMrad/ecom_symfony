{% extends 'base.html.twig' %}

{% block title %}Edit product
{% endblock %}

{% block body %}
    <h1>Edit product
    </h1>

    {{ form_start(form, {'attr': {'class': 'product-form'}}) }}

    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.stock, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-mauve">Modifier</button>
    </div>

    {{ form_end(form) }}
{% endblock %}
